rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /staff/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /blogPosts/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /siteConfig/contact {
      allow read, write: if request.auth != null;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
